#!/bin/bash
# This script creates a PID file, displays messages, and handles signals

# Function to remove the PID file and terminate the script
cleanup() {
    echo "I hate the kill command"
    rm -f /var/run/myscript.pid
    exit 0
}

# Function to handle SIGTERM signal
handle_sigterm() {
    cleanup
}

# Function to handle SIGINT signal
handle_sigint() {
    echo "Y U no love me?!"
}

# Trap signals and call the appropriate handler functions
trap 'handle_sigterm' SIGTERM
trap 'handle_sigint' SIGINT

# Create the PID file with the current PID
echo $$ > /var/run/myscript.pid

# Infinite loop displaying "To infinity and beyond"
while true; do
    echo "To infinity and beyond"
    sleep 1
done
